<center><div id='welcome'>Welcome to tic-tac-toe! Please select players</div> </center>
<form action = "select"  method = "post">
<center>
<table>

<tr>
    <td>Player 1</td>
    <td>Player 2</td>
</tr>
    <tr>
        <td>
            <select required name='player1' onchange='generate(this.options[selectedIndex].value)' >

                    <option value="" >Select your option</option>
				    <option value='Human' >Human - X</option>
				    <option value='Easy'>Easy - X</option>
				    <option value='Medium'>Medium - X</option>
				    <option value='Unbeatable'>Unbeatable - X</option>
            </select>
            
        </td>
        <div id="enterName"></div>
        <td>
            <select required name='player2'placeholder="player 2">
                    <option value="" >Select your option</option>
				    <option value='Human'>Human - O</option>
				    <option value='Easy'>Easy - O</option>
				    <option value='Medium'>Medium - O</option>
				    <option value='Unbeatable'>Unbeatable - O</option>
            </select>
            
            </td>
        </tr>
    </table>
    <input type = "submit">
    <center>
<form>
<script>
    function generate(name) {
        if(name="Human")document.getElementById("player1"){
            var input = document.createElement("input");
            input.type = "text";
            input.name = "name";
            input.id = "player_name";
            input.required = true;
            document.getElementById("enterName").appendChild(input).value;
        }
    }
    </script>
